- title t('.title')

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = error_messages_for resource, :header_message => false
  = f.inputs do
    = f.input :email
    = f.input :password, :hint => "(#{t('.leave_blank')})"
    = f.input :password_confirmation
    = f.input :current_password, :hint => "(#{t('.current_password_label')})"
    = f.buttons do
      = f.commit_button t('.update'), :button_html => { :class => [:update, :button] }