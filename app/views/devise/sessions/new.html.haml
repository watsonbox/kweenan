- title 'Sign in'

= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
  = f.inputs do
    = f.input :email
    %li{:id => 'merchant_password_input'}
      = f.label(:password, ("Password<abbr title='required'>*</abbr> " + link_to("(forgot password)", new_password_path(resource_name))).html_safe)
      = f.password_field :password
    = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

  = f.buttons do
    = f.commit_button 'Sign in', :button_html => { :class => [:big, :button] }

  %br
  %br
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)